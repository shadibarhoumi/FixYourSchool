<nav class="top-nav wrap">

	<%= link_to "FixYourSchool.", root_url, id: "home", class: "nav-element-left" %>
	<%= link_to "Start a Petition", "/schools/1/petitions/new", class: "nav-element-left nav-link" %>
	<%= link_to "Browse Petitions", "/schools/1/petitions/", class: "nav-element-left nav-link"%>


